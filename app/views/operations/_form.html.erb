  </div>

  <div>
  <%= form.label :otype, style: "display: block" %>
  <%= form.select :otype, Operation.otypes.keys %>
</div> 
  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description %>
  </div>


    
    
