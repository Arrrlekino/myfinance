<%= form_with(model: operation) do |form| %>
  <% if operation.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(operation.errors.count, "error") %> prohibited this operation from being saved:</h2>

      <ul>
        <% operation.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :amount, style: "display: block" %>
    <%= form.text_field :amount %>
  </div>

  <div>
    <%= form.label :odate, style: "display: block" %>
    <%= form.datetime_field :odate %>
  </div>

  <div>
  <%= form.label :otype, style: "display: block" %>
  <%= form.select :otype, Operation.otypes.keys %>
</div> 
  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description %>
  </div>


  <div class="col-md-4">
    
    
    <% @categories.each do |category| %>
      <%= form.label :category, style: "display: block" %>
      <%= form.select :category, Category.name %>
    
    <% end %>
    
  </div>


  <div>
    <%= form.submit %>
  </div>
<% end %>
