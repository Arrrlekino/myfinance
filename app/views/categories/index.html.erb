<div class="container-fluid">
<p style="color: green"><%= notice %></p>

<h1>Categories</h1>

<div id="categories">
  <% @categories.each do |category| %>
    <%= render category %>
    <p>
      <%= link_to "Show this category", category, class:"btn btn-primary" %>
    </p>
  <% end %>
</div>

<p>
  <%= link_to "New category", new_category_path, class:"btn btn-success" %>
</p>
</div>