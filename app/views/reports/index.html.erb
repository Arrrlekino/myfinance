<div class="container-fluid">
<h1>Report#index</h1>
<p>Find me in app/views/report/index.html.erb</p>

<!-- Input start_data -->
<div class="row g-3 align-items-center">
    <div class="col-2 text">
  <div>
    <%= form.label :odate, style: "display: block" %>
    <%= form.datetime_field :start_odate %>
  </div>
  </div>
  </div>  

  <!-- Input end_data -->
  <div class="row g-3 align-items-center">
    <div class="col-2 text">
  <div>
    <%= form.label :odate, style: "display: block" %>
    <%= form.datetime_field :end_odate %>
  </div>
  </div>
  </div>  

  <!-- Input report_category -->
  div class="row g-3 align-items-left">
    <div class="col-2 text">
      <label for="operation_category_id" class="form-label">Category</label>

      <select
          name="operation[category_id]"
          id="operation_category_id"
          class="form-select"
      >
          <%= Category.all.each do |c| %>
          <option value=<%= c.id %>>
            <%= c.name %>
          </option>
          <% end %>
      </select>
    </div>
  </div>

  <div>
  <%= link_to "Edit this operation", edit_operation_path(@operation), class:"btn btn-warning" %> 
  <%= link_to "Back to operations", operations_path, class:"btn btn-success" %>
  <p>
    <div class="col-2">
      <%= button_to "Destroy this operation", @operation, method: :delete, class:"btn btn-danger" %>
    </div>
  </p> 
</div> 
  </div>